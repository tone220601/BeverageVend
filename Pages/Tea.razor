@inherits BeverageBase
<div style="position:center; padding:10px 0px 20px;">
    <div>
        <label style="font-family:Lucida Handwriting; padding-right:10px">Would you like milk </label>
        <input id="cbtMilk" type="checkbox" @bind="vend.Milk" />
    </div>
    <div>
        <label style="font-family:Lucida Handwriting; padding-right:10px">Would you like sugar </label>
        <input id="cbtSugar" type="checkbox" @bind="vend.Sugar" />
    </div>
    <div>
        <label style="font-family:Lucida Handwriting; padding-right:10px">Would you like lenon </label>
        <input id="cbtLemon" type="checkbox" @bind="vend.Lemon" />
    </div>
</div>
<div>
    <button class="btn btn-primary" style="padding-right:10px" @onclick="() => Tea()" disabled="@isDisabled">Create beverage</button>
</div>
